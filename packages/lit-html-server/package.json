{
  "name": "@popeindustries/lit-html-server",
  "version": "4.0.0-beta.1",
  "description": "Render lit-html templates on the server",
  "author": "Alexander Pope <alex@pope.industries>",
  "keywords": [
    "html template",
    "lit-html",
    "ssr",
    "stream",
    "streaming",
    "tagged template literal",
    "template",
    "template render"
  ],
  "type": "module",
  "types": "index.d.ts",
  "exports": {
    ".": {
      "browser": "./browser.js",
      "node": "./index.js"
    },
    "./hydrate.js": "./hydrate.js",
    "./directives/*": "./directives/*"
  },
  "imports": {
    "#buffer": {
      "browser": "./src/internal/browser-buffer.js",
      "node": "./src/internal/buffer.js"
    },
    "#digest": {
      "browser": "./src/internal/browser-digest.js",
      "node": "./src/internal/digest.js"
    },
    "#stream": {
      "browser": "./src/internal/browser-stream.js",
      "node": "./src/internal/stream.js"
    },
    "#template-renderer": {
      "browser": "./src/internal/browser-stream-template-renderer.js",
      "node": "./src/internal/node-stream-template-renderer.js"
    }
  },
  "files": [
    "directives",
    "*.d.ts",
    "*.js",
    "README.MD"
  ],
  "repository": "https://github.com/popeindustries/lit.git",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "lit-html": "^2.2.7"
  },
  "devDependencies": {
    "@lit-labs/ssr": "2.2.2",
    "autocannon": "^7.9.0",
    "send": "^0.18.0"
  },
  "scripts": {
    "build": "node ./scripts/build.js",
    "clean": "git clean -x -f",
    "perf": "node test/benchmark/perf.js",
    "test": "npm run build && npm run lint && npm run test:unit && npm run test:browser",
    "test:unit": "NODE_ENV=test mocha --require './src/dom-shim.js' --reporter spec --timeout 2000 'test/*-test.js'",
    "test:browser": "node ./test/browser/cli.js"
  }
}
