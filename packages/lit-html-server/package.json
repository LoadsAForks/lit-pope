{
  "name": "@popeindustries/lit-html-server",
  "version": "4.0.0-beta.1",
  "description": "Render lit-html templates on the server",
  "author": "Alexander Pope <alex@pope-industries.com>",
  "keywords": [
    "html template",
    "lit-html",
    "ssr",
    "stream",
    "streaming",
    "tagged template literal",
    "template",
    "template render"
  ],
  "type": "module",
  "types": "index.d.ts",
  "main": "index.js",
  "browser": "./browser.js",
  "exports": {
    ".": {
      "browser": "./browser.js",
      "import": "./index.js"
    },
    "./directives/*": "./directives/*"
  },
  "files": [
    "directives",
    "*.d.ts",
    "*.js",
    "README.MD"
  ],
  "repository": "https://github.com/popeindustries/lit.git",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "lit": "2.2.5"
  },
  "devDependencies": {
    "@lit-labs/ssr": "2.2.0",
    "autocannon": "^7.9.0",
    "puppeteer": "^14.3.0",
    "send": "^0.18.0"
  },
  "scripts": {
    "build": "node ./scripts/build.js",
    "clean": "git clean -x -f",
    "perf": "node test/benchmark/perf.js",
    "test": "npm run build && npm run lint && npm run test:unit && npm run test:browser",
    "test:unit": "NODE_ENV=test mocha --require './src/dom-shim.js' --reporter spec --bail --timeout 2000 'test/*-test.js'",
    "test:browser": "node ./test/browser/cli.js"
  },
  "prettier": {
    "arrowParens": "always",
    "htmlWhitespaceSensitivity": "ignore",
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint"
    ],
    "*.json": [
      "prettier --write"
    ]
  }
}
