{
  "name": "@popeindustries/lit",
  "version": "1.0.5",
  "description": "Seamlessly render lit templates and elements on the server and in the browser",
  "author": "Alexander Pope <alex@pope.industries>",
  "keywords": [
    "html template",
    "lit-html",
    "ssr",
    "stream",
    "streaming",
    "tagged template literal",
    "template",
    "template render"
  ],
  "type": "module",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "default": "./index.js"
    },
    "./async-directive.js": {
      "types": "./async-directive.d.ts",
      "default": "./async-directive.js"
    },
    "./decorators.js": {
      "types": "./decorators.d.ts",
      "default": "./decorators.js"
    },
    "./directive-helpers.js": {
      "types": "./directive-helpers.d.ts",
      "default": "./directive-helpers.js"
    },
    "./directive.js": {
      "types": "./directive.d.ts",
      "default": "./directive.js"
    },
    "./element-renderer.js": {
      "types": "./element-renderer.d.ts",
      "default": "./element-renderer.js"
    },
    "./html-server.js": {
      "types": "./html-server.d.ts",
      "default": "./html-server.js"
    },
    "./html.js": {
      "types": "./html.d.ts",
      "default": "./html.js"
    },
    "./lazy-hydration-mixin.js": {
      "types": "./lazy-hydration-mixin.d.ts",
      "default": "./lazy-hydration-mixin.js"
    },
    "./lit-element-renderer.js": {
      "types": "./lit-element-renderer.d.ts",
      "default": "./lit-element-renderer.js"
    },
    "./server-dom-shim.js": "./server-dom-shim.js",
    "./static.js": {
      "types": "./static.d.ts",
      "default": "./static.js"
    },
    "./decorators/*": "./decorators/*",
    "./directives/async-append.js": {
      "types": "./directives/async-append.d.ts",
      "browser": "./directives/async-append.js",
      "default": "./directives/async-append-server.js"
    },
    "./directives/async-replace.js": {
      "types": "./directives/async-replace.d.ts",
      "browser": "./directives/async-replace.js",
      "default": "./directives/async-replace-server.js"
    },
    "./directives/hydratable.js": {
      "types": "./directives/hydratable-server.d.ts",
      "default": "./directives/hydratable-server.js"
    },
    "./directives/until.js": {
      "types": "./directives/until.d.ts",
      "browser": "./directives/until.js",
      "default": "./directives/until-server.js"
    },
    "./directives/*": "./directives/*"
  },
  "files": [
    "decorators",
    "directives",
    "*.d.ts",
    "*.js",
    "README.MD"
  ],
  "repository": "https://github.com/popeindustries/lit.git",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@lit/reactive-element": "^1.4.1",
    "@popeindustries/lit-element": "workspace:^",
    "@popeindustries/lit-html": "workspace:^",
    "@popeindustries/lit-html-server": "workspace:^"
  },
  "scripts": {
    "build": "node ./scripts/build.js",
    "clean": "git clean -x -f"
  }
}
