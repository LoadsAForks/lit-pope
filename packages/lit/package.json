{
  "name": "@popeindustries/lit",
  "version": "1.2.1",
  "description": "Seamlessly render lit templates and elements on the server and in the browser",
  "author": "Alexander Pope <alex@pope.industries>",
  "keywords": [
    "html template",
    "lit-html",
    "ssr",
    "stream",
    "streaming",
    "tagged template literal",
    "template",
    "template render"
  ],
  "type": "module",
  "exports": {
    ".": "./index.js",
    "./async-directive.js": "./async-directive.js",
    "./decorators.js": "./decorators.js",
    "./directive-helpers.js": "./directive-helpers.js",
    "./directive.js": "./directive.js",
    "./element-renderer.js": "./element-renderer.js",
    "./html-server.js": "./html-server.js",
    "./html.js": "./html.js",
    "./is-server.js": "./is-server.js",
    "./lazy-hydration-mixin.js": "./lazy-hydration-mixin.js",
    "./lit-element-renderer.js": "./lit-element-renderer.js",
    "./server-dom-shim.js": "./server-dom-shim.js",
    "./static.js": "./static.js",
    "./decorators/custom-element.js": "./decorators/custom-element.js",
    "./decorators/event-options.js": "./decorators/event-options.js",
    "./decorators/property.js": "./decorators/property.js",
    "./decorators/query-all.js": "./decorators/query-all.js",
    "./decorators/query-assigned-element.js": "./decorators/query-assigned-element.js",
    "./decorators/query-assigned-nodes.js": "./decorators/query-assigned-nodes.js",
    "./decorators/query-async.js": "./decorators/query-async.js",
    "./decorators/query.js": "./decorators/query.js",
    "./decorators/state.js": "./decorators/state.js",
    "./directives/async-append.js": {
      "types": "./directives/async-append.d.ts",
      "browser": "./directives/async-append.js",
      "default": "./directives/async-append-server.js"
    },
    "./directives/async-replace.js": {
      "types": "./directives/async-replace.d.ts",
      "browser": "./directives/async-replace.js",
      "default": "./directives/async-replace-server.js"
    },
    "./directives/cache.js": "./directives/cache.js",
    "./directives/choose.js": "./directives/choose.js",
    "./directives/class-map.js": "./directives/class-map.js",
    "./directives/guard.js": "./directives/guard.js",
    "./directives/hydratable.js": "./directives/hydratable.js",
    "./directives/hydratable-server.js": "./directives/hydratable.js",
    "./directives/if-defined.js": "./directives/if-defined.js",
    "./directives/join.js": "./directives/join.js",
    "./directives/keyed.js": "./directives/keyed.js",
    "./directives/live.js": "./directives/live.js",
    "./directives/map.js": "./directives/map.js",
    "./directives/range.js": "./directives/range.js",
    "./directives/ref.js": "./directives/ref.js",
    "./directives/repeat.js": "./directives/repeat.js",
    "./directives/style-map.js": "./directives/style-map.js",
    "./directives/template-content.js": "./directives/template-content.js",
    "./directives/unsafe-html.js": "./directives/unsafe-html.js",
    "./directives/unsafe-svg.js": "./directives/unsafe-svg.js",
    "./directives/until.js": {
      "types": "./directives/until.d.ts",
      "browser": "./directives/until.js",
      "default": "./directives/until-server.js"
    },
    "./directives/when.js": "./directives/when.js"
  },
  "imports": {
    "#is-server": {
      "browser": "@popeindustries/lit-html/is-server.js",
      "default": "@popeindustries/lit-html-server/is-server.js"
    }
  },
  "files": [
    "decorators",
    "directives",
    "*.d.ts",
    "*.js",
    "README.MD"
  ],
  "repository": "https://github.com/popeindustries/lit.git",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@lit/reactive-element": "^1.6.1",
    "@popeindustries/lit-element": "workspace:^",
    "@popeindustries/lit-html": "workspace:^",
    "@popeindustries/lit-html-server": "workspace:^"
  },
  "scripts": {
    "build": "node ./scripts/build.js"
  }
}
