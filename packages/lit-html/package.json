{
  "name": "@popeindustries/lit-html",
  "version": "5.0.0-beta.1",
  "description": "Seamlessly render lit-html templates on the server and in the browser",
  "author": "Alexander Pope <alex@pope.industries>",
  "keywords": [
    "html template",
    "lit-html",
    "ssr",
    "stream",
    "streaming",
    "tagged template literal",
    "template",
    "template render"
  ],
  "type": "module",
  "types": "index.d.ts",
  "exports": {
    ".": {
      "browser": "./browser.js",
      "node": "./index.js"
    },
    "./hydrate.js": "./hydrate.js",
    "./partial-hydration-mixin.js": "./partial-hydration-mixin.js",
    "./directives/*": "./directives/*"
  },
  "files": [
    "directives",
    "*.d.ts",
    "*.js",
    "README.MD"
  ],
  "repository": "https://github.com/popeindustries/lit.git",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@popeindustries/lit-html-server": "workspace:*",
    "lit-html": "^2.2.7"
  },
  "devDependencies": {
    "@lit-labs/ssr": "2.2.2",
    "autocannon": "^7.9.0",
    "send": "^0.18.0"
  },
  "scripts": {
    "build": "node ./scripts/build.js",
    "clean": "git clean -x -f",
    "test": "pnpm run build && pnpm run lint && pnpm run test:browser",
    "test:browser": "node ./test/browser/cli.js"
  }
}
