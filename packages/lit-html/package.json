{
  "name": "@popeindustries/lit-html",
  "version": "5.0.0-beta.1",
  "description": "Enable hydration of lit-html templates rendered on the server with @popeindustries/lit-html-server",
  "author": "Alexander Pope <alex@pope.industries>",
  "keywords": [
    "html template",
    "lit-html",
    "ssr",
    "stream",
    "streaming",
    "tagged template literal",
    "template",
    "template render"
  ],
  "type": "module",
  "exports": {
    ".": {
      "types": "./lit-html.d.ts",
      "browser": "./lit-html.js",
      "default": "./lit-html-not-browser.js"
    },
    "./async-directive.js": {
      "types": "./async-directive.d.ts",
      "default": "./async-directive.js"
    },
    "./directive.js": {
      "types": "./directive.d.ts",
      "default": "./directive.js"
    },
    "./directive-helpers.js": {
      "types": "./directive-helpers.d.ts",
      "default": "./directive-helpers.js"
    },
    "./partial-hydration-mixin.js": {
      "types": "./partial-hydration-mixin.d.ts",
      "default": "./partial-hydration-mixin.js"
    },
    "./static.js": {
      "types": "./static.d.ts",
      "default": "./static.js"
    },
    "./directives/*": "./directives/*"
  },
  "files": [
    "directives",
    "*.d.ts",
    "*.js",
    "README.MD"
  ],
  "repository": "https://github.com/popeindustries/lit.git",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "lit-html": "^2.3.0"
  },
  "devDependencies": {
    "@types/trusted-types": "^2.0.2"
  },
  "scripts": {
    "build": "node ./scripts/build.js",
    "clean": "git clean -x -f",
    "test": "pnpm run build && pnpm run lint && pnpm run test:browser",
    "test:browser": "node ./test/browser/cli.js"
  }
}
