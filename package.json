{
  "name": "@popeindustries/lit-monorepo",
  "version": "0.0.0",
  "description": "A monorepo for the lit-html-server family of packages",
  "author": "Alexander Pope <alex@pope-industries.com>",
  "private": true,
  "license": "MIT",
  "type": "module",
  "repository": "https://github.com/popeindusties/lit",
  "homepage": "https://github.com/popeindusties/lit#readme",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm --workspaces run build",
    "clean": "git clean -x -f",
    "format": "prettier --write 'packages/**/{src,test}/**/*.{js,json}'",
    "lint": "npm run lint:src && npm run lint:types",
    "lint:src": "eslint 'packages/**/{src,test}/**/*.js'",
    "lint:types": "tsc --noEmit --skipLibCheck --project jsconfig.json",
    "postpublish": "npm run clean",
    "prepublishOnly": "npm run clean && npm run build",
    "prepare": "husky install",
    "test:unit": "npm --workspaces run test:unit"
  },
  "devDependencies": {
    "@babel/core": "^7.14.0",
    "@babel/eslint-parser": "^7.13.0",
    "@types/node": "^15.6.0",
    "chai": "^4.3.4",
    "esbuild": "^0.12.5",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "mocha": "^8.4.0",
    "prettier": "^2.3.0",
    "typescript": "^4.3.0"
  },
  "prettier": {
    "arrowParens": "always",
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "lint-staged": {
    "*.js": [
      "eslint"
    ],
    "*.{js,json,md}": [
      "prettier --write"
    ]
  }
}
