{
  "name": "@popeindustries/lit-monorepo",
  "version": "0.0.0",
  "description": "A monorepo for the lit-html-server family of packages",
  "author": "Alexander Pope <alex@pope-industries.com>",
  "private": true,
  "license": "MIT",
  "type": "module",
  "repository": "https://github.com/popeindusties/lit",
  "homepage": "https://github.com/popeindusties/lit#readme",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r run build",
    "clean": "git clean -x -f",
    "format": "prettier --write 'packages/**/{src,test}/**/*.{js,json}'",
    "lint": "pnpm -r run lint:src && pnpm -r run lint:types",
    "lint:src": "eslint 'packages/**/{src,test}/**/*.js'",
    "lint:types": "tsc --noEmit --skipLibCheck --project jsconfig.json",
    "postpublish": "pnpm run clean",
    "prepublishOnly": "pnpm run clean && pnpm run build",
    "prepare": "husky install",
    "test:unit": "pnpm -r run test:unit"
  },
  "devDependencies": {
    "@changesets/cli": "^2.23.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.42",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "esbuild": "^0.14.43",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.1",
    "mocha": "^10.0.0",
    "prettier": "^2.6.2",
    "typescript": "^4.7.3"
  },
  "prettier": {
    "arrowParens": "always",
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "lint-staged": {
    "*.js": [
      "eslint"
    ],
    "*.{js,json,md}": [
      "prettier --write"
    ]
  }
}
